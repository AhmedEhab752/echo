#include <stdio.h>

#include <stdlib.h>

#include <string.h>



int main (void)

{

        char arr[500];



        while(1)

        {

                printf("Ana Gahez Ya Basha > ");

                fgets(arr,500,stdin);





                if(strcmp(arr,"exit\n") == 0)

                {

                        printf("Goodbye :) \n");

                        break;

                }

                printf("you said : %s\n",arr);



        }

        return 0;

}

